# This is an alternative approach. Single line minimalist in git repo.
override_git_prompt_colors() {
  GIT_PROMPT_THEME_NAME="Single_line_Minimalist"

  function prompt_callback {
    local PS1="$(gp_truncate_pwd)"
    gp_set_window_title "$PS1"
  }

  PathShort="\W";

  GIT_PROMPT_PREFIX=" "
  GIT_PROMPT_SUFFIX=""
  GIT_PROMPT_SEPARATOR=" "
  GIT_PROMPT_STAGED="${Green} "
  GIT_PROMPT_CONFLICTS="${Red}✖ "
  GIT_PROMPT_CHANGED="${Red}  "
  GIT_PROMPT_UNTRACKED="${Red}  "
  GIT_PROMPT_STASHED="${BoldBlue}  "
  GIT_PROMPT_CLEAN="${BoldGreen} "

  GIT_PROMPT_COMMAND_OK="${Blue} "
  GIT_PROMPT_COMMAND_FAIL="${Red} "



  GIT_PROMPT_START_USER="_LAST_COMMAND_INDICATOR_ ${ResetColor} ${Black}${PathShort}${ResetColor}"
  GIT_PROMPT_END_USER="${ResetColor} $ "
  GIT_PROMPT_END_ROOT="${BoldRed} # "

}

reload_git_prompt_colors "Single_line_Minimalist"

