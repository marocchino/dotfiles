#!/bin/bash

function update-brew {
  echo updating brew
  brew update
  brew upgrade --all
  brew cleanup
}

function update-apt-get {
  echo updating apt-get
  sudo apt-get update -y
}

function update-vim {
  echo updating vim
  vim +PlugUpdate +qall
}

function update-npm {
  echo updating npm
  npm-check -u -g
}

function update-docker-machine {
  echo updating docker-machine
  docker-machine upgrade
}

function update-dotfiles {
  echo updating dotfiles
  pushd ~/dotfiles
  git pull
  popd
}

function update-kuromoji {
  echo updating kuromoji
  brew services stop elasticsearch
  elasticsearch-plugin install analysis-kuromoji
  brew services start elasticsearch
}

case $1 in
brew)
  update-brew
  ;;
apt-get)
  update-apt-get
  ;;
vim)
  update-vim
  ;;
npm)
  update-npm
  ;;
docker-machine)
  update-docker-machine
  ;;
dotfiles)
  update-dotfiles
  ;;
kuromoji)
  update-kuromoji
  ;;
all)
  update-brew
  update-vim
  update-npm
  update-docker-machine
  update-dotfiles
  ;;
*)
  echo 'update what?'
  echo 'please select from [brew, apt-get, vim, npm,
                            docker-machine, dotfiles, all]'
  ;;
esac

