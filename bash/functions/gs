#!/bin/bash
set -ex -o pipefail

function main() {
  if [[ $# -eq 0 ]]; then
    preview="git show --color=always {-1}"
    git branch | \
      fzf --height 80% --preview "$preview" --layout reverse \
          --preview-window up,20,border-horizontal | \
      xargs git switch
  else
    git switch "$@"
  fi
}
main "$@"
