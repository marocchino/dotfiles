{
  "highlight.colors.enable": true,
  "highlight.document.enable": true,
  "coc.preferences.colorSupport": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "elixir",
    "graphql",
    "html",
    "javascript",
    "json",
    "ruby",
    "terraform",
    "typescript"
  ],
  "elixir.pathToElixirLS": "~/Documents/elixir-ls/release/language_server.sh",
  "solargraph.diagnostics": true,
  "html.enable": true,
  "html.filetypes": [
    "html",
    "handlebars",
    "markdown",
    "reason",
    "rescript",
    "javascriptreact",
    "typescriptreact"
  ],
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform"],
      "initializationOptions": {}
    }
  },
  "diagnostic.enable": true,
  "diagnostic-languageserver.filetypes": {
    "bash": "shellcheck",
    "eelixir": ["mix_credo", "mix_credo_compile"],
    "elixir": ["mix_credo", "mix_credo_compile"],
    "markdown": ["write-good", "markdownlint"],
    "ruby": "rubocop",
    "javascript": ["eslint"],
    "javascript.jsx": ["eslint"],
    "typescript": ["eslint"],
    "typescript.tsx": ["eslint"],
    "sh": "shellcheck",
    "vim": "vint"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "css": "prettier",
    "eelixir": "mix_format",
    "elixir": "mix_format",
    "go": "gofmt",
    "graphql": "prettier",
    "javascript": ["prettier"],
    "javascript.jsx": ["prettier"],
    "typescript": ["prettier"],
    "typescript.tsx": ["prettier"],
    "json": "prettier",
    "terraform": "tffmt"
  }
}
