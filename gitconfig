[color]
  diff   = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[merge]
  tool = vimdiff
[core]
  editor = vim
[grep]
  extendRegexp = true
  lineNumber = true
[alias]
  st = status
  w = whatchanged
  ca = commit --amend
  wip = commit --amend --all --no-edit
  pf = push -f
  cleanup = !git branch --merged | grep -v '*' | xargs git branch -d
[include]
  path = .gitconfig.local
[push]
  default = current
[filter "media"]
  required = true
	clean = git media clean %f
	smudge = git media smudge %f
