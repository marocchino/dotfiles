[color]
  diff   = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[merge]
  tool = vimdiff
[core]
  editor = vim
[grep]
  extendRegexp = true
  lineNumber = true
[alias]
  st = status
  w = whatchanged
  ca = commit --amend
  wip = commit --amend --all --no-edit
  rma = !git rm $(git ls-files --deleted)
  pushf = push -f
  pullf = !git fetch --all && git reset --hard origin/$(git rev-parse --abbrev-ref HEAD)
  cleanup = !git branch --merged | grep -v '*' | xargs git branch -d
[include]
  path = .gitconfig.local
[push]
  default = current
[url "git@github.com:"]
  pushinsteadof = "git://github.com/"
  pushinsteadof = "https://github.com/"
[filter "media"]
  required = true
	clean = git media clean %f
	smudge = git media smudge %f
