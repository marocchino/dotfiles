[
  // See the onivim documentation for details on the format:
  // https://onivim.github.io/docs/configuration/key-bindings
  // Add key bindings here, for example:
  // { "key": "<TAB>", "command": "workbench.action.quickOpen", "when": "editorTextFocus" },
  // { "key": "jk", "command": "vim.esc", "when": "insertMode" },
  { "key": "<Leader>t", "command": ":term ++curwin", "when": "normalMode" },
  { "key": "<Leader>f", "command": "workbench.action.findInFiles", "when": "normalMode" },
  { "key": "<Leader>b", "command": "workbench.view.explorer", "when": "normalMode" },
  { "key": "<C-h>", "command": "window.moveLeft" },
  { "key": "<C-k>", "command": "window.moveUp" },
  { "key": "<C-j>", "command": "window.moveDown" },
  { "key": "<C-l>", "command": "window.moveRight" },
]
